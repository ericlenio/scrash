#! /usr/bin/env bash

export SCR_PORT=4553
export SCR_ENV=dev
TEST_MODE=''

while builtin getopts "p:t" opt; do
  case $opt in
    (p)
      SCR_PORT=$OPTARG
      ;;
    (t)
      TEST_MODE="-t"
      SCR_ENV=test
      ;;
  esac
done

url="http://127.0.0.1:$SCR_PORT/scr-get-bash-functions"
eval "$(curl -S -f -s --compressed $url)"
-shell-init -v -s 1 $TEST_MODE
